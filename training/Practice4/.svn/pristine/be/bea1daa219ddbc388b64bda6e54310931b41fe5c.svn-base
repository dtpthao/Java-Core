	public void Sort(Integer[] mas2) {
		
		for(int i = 0; i< mas2.length - 1; i++) 
			for(int j = i; j < mas2.length; j++) {
				if (mas2[j] < mas2[i]) {
					mas2[i] -= mas2[j];
					mas2[j] += mas2[i];
					mas2[i] = mas2[j] - mas2[i];
				}
			}
	}

